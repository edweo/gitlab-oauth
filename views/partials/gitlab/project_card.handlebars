<form action={{baseUrl form_action}} method="post"
      class="project-card bg-orange-300 cursor-pointer p-4 po rounded gap-2 flex flex-col shadow-md
      hover:bg-orange-400 drop-shadow-xl ease-in transition">
    <input type="hidden" value={{id}} name="id">
    <input type="hidden" value={{csrf}} name="_csrf">
    <div class="flex justify-between items-start gap-4">
        <h1 class="font-bold text-xl">{{name}}</h1>
        <div class="flex gap-1 justify-start items-center">
            <h1 class="text-white font-bold text-md">{{stars}}</h1>
            {{> svg_icons/star_icon}}
        </div>
    </div>
    <h2>{{descriptionFormat description}}</h2>
    <div class="flex justify-start items-center gap-2">
        {{> svg_icons/user_icon}}
        <h2>{{owner_username}}</h2>
    </div>
    <button type="submit" class="btn-open-project"></button>
</form>
