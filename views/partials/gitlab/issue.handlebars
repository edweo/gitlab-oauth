<div class="bg-black/20 p-2 flex flex-col rounded w-full">
    <div class="flex flex-row items-center justify-between">
        <h1 class="text-white font-3xl font-bold">{{title}}</h1>
        <div class="flex items-center justify-end gap-1">
            <div class="links-tags flex items-center justify-end gap-1">

            </div>
            <div class="flex items-center justify-end gap-1">
                <a class="bg-black/50 p-0.5 rounded hover:bg-black/40" target="_blank" href={{url_to}}>🔗</a>
                <button class="bg-black/50 p-0.5 rounded hover:bg-black/40" onclick="{
                  const issueEvent = new Event('close-issue', { id: {{id}} })
                  this.dispatchEvent(issueEvent)
                }">🗑️</button>
            </div>
        </div>
    </div>
    <h2>{{description}}</h2>
    <div class="flex flex-row items-center justify-start gap-1"></div>
</div>