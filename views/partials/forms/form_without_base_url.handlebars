<div class="{{bg}} p-4 rounded gap-2 flex flex-col {{width}} shadow-md">
    <div class="flex flex-col justify-center items-center mb-4">
        {{#if imgSrc}}
            <img src={{baseUrl imgSrc}} alt="logo" width="100px" height="100px">
        {{/if}}
        <h1 class="text-white font-bold text-3xl text-center">{{title}}</h1>
    </div>
    {{#if flash}}
        <div class="rounded flex flex-row gap-2 justify-start items-start bg-violet-400 p-1">
            {{> svg_icons/warning_icon}}
            <h1 class="text-white font-bold text-start leading-none self-center">{{flash}}</h1>
        </div>
    {{/if}}
    <form action="{{action}}?_method={{method_override}}" method="post" class="rounded flex flex-col gap-2">
        {{> @partial-block }}
    </form>
</div>
