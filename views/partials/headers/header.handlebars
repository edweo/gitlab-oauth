<div class="bg-orange-site px-3 py-2 flex flex-col sm:flex-row w-full
items-center justify-between sticky z-10 top-0 left-0 shadow-xl flex-shrink-0">
    <a href={{baseUrl "/"}} class="flex flex-row gap-2 items-center justify-center">
        <img src={{baseUrl "/img/icon.png"}} alt="logo" width="40px" height="40px">
        <h1 class="text-white font-bold text-2xl">LNU GitLab Manager</h1>
    </a>

    <nav class="flex flex-row justify-center items-center gap-2">
        {{#if logged_in}}
            {{#> headers/header_nav_link href="/logout" text="Logout"}}
                {{> svg_icons/enter_icon}}
            {{/ headers/header_nav_link}}
            <div class="flex flex-col text-white rounded p-0.5 leading-none">
                <h1 class="text-xs leading-none text-white font-bold">User:</h1>
                <h1 class="leading-none text-green-700 font-bold">{{logged_in}}</h1>
            </div>
        {{else}}
            {{#> headers/header_nav_link href="/login" text="Login"}}
                {{> svg_icons/user_icon}}
            {{/ headers/header_nav_link}}
        {{/if}}
    </nav>
</div>
